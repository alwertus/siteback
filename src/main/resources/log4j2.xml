<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!-- default <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
            <PatternLayout pattern="%d{HH:mm:ss} %-5level [%logger{36}]: %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- не работает -->
        <Logger name= "ru.alwertus.siteback" level="error" additivity="true">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="all"> <!-- тут работает -->
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>


</Configuration>
<!--
OFF	0
FATAL	100
ERROR	200
WARN	300
INFO	400     ключевые моменты
DEBUG	500
TRACE	600     вход в процедуры, SQL запросы
ALL	Integer.MAX_VALUE
